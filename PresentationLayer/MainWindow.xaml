<Window x:Class="PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="listbox"/>
        <StackPanel Grid.Column="1"
                    Background="LightBlue">
            <TextBox Name="tbLogin" Margin="10" Height="30"></TextBox>
            <TextBox Name="tbPass" Margin="10" Height="30"></TextBox>
            <TextBox Name="tbName" Margin="10" Height="30"></TextBox>
            <Button Content="Add" Click="Button_Click" Margin="20"></Button>
            <Button Content="Refresh" Click="Button_Click_1" Margin="20"></Button>
            <Button Content="Delete" Click="Delete_Click" Margin="20"></Button>
        </StackPanel>
        
    </Grid>
</Window>
